---
// Aqu√≠ podr√≠as recibir el t√≠tulo como una propiedad (prop)
const { title = "Mi Web en Astro" } = Astro.props;
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="/" class="logo">üöÄ AstroSite</a>
				<div class="links">
					<a href="/">Inicio</a>
					<a href="/ventas">Ventas</a>
					<a href="/contacto">Contacto</a>
					<a href="/Login">Login</a>  
					<a href="/blog">Blog</a>  
					</div>
					
				</div>
			</div>
		</nav>

		<slot /><Footer /></body>
</html>



<style is:global>
	:root {
		--primary: #4f46e5;
		--text: #1f2937;
		--bg: #ffffff;
	}

	html, body {
		margin: 0;
		font-family: 'Segoe UI', system-ui, sans-serif;
		background-color: var(--bg);
		color: var(--text);
	}

	nav {
		background: white;
		border-bottom: 1px solid #eee;
		padding: 1rem 0;
		position: sticky;
		top: 0;
	}

	.nav-content {
		max-width: 800px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0 2rem;
	}

	.logo {
		font-weight: bold;
		font-size: 1.2rem;
		text-decoration: none;
		color: var(--primary);
	}

	.links a {
		text-decoration: none;
		color: #4b5563;
		margin-left: 20px;
		font-weight: 500;
	}

	.links a:hover {
		color: var(--primary);
	}

/* Estilos para m√≥viles */
@media (max-width: 600px) {
  .nav-content {
    flex-direction: column; /* Pone el logo arriba y los links abajo */
    gap: 10px;
  }

  .links a {
    margin: 0 10px; /* Espacia mejor los links en pantallas peque√±as */
  }

  h1 {
    font-size: 2rem; /* Reduce el tama√±o del t√≠tulo para que no se corte */
  }
}

</style>