---
const { title } = Astro.props;
import Layout from "./Layout.astro";

---
<html lang="es">
    <Layout>
        <head>
            <meta charset="utf-8" />
            <title>{title}</title>
        </head>
        <body>
           
            <div class="logo">ASTRO STORE</div>
          
    </Layout>
        <slot /> <style is:global>


      /* EXPLICACIÓN: 'is:global' hace que este estilo afecte a TODA la página */
      body {
        background-color: #0a0a0a;
        color: white;
        font-family: 'Inter', sans-serif;
        margin: 0;
      }
      .glass-nav {
        display: flex;
        justify-content: space-between;
        padding: 1.5rem 5%;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 100;
      }
    </style>
  </body>
</html>