import { Image } from 'astro:assets';
// EXPLICACIÃ“N: Importamos la foto fÃ­sicamente desde la carpeta assets
import fotoProducto from '../assets/silla2.jpg';

const { nombre, precio } = Astro.props;
---

<div class="card">
  <Image src={fotoProducto} alt={nombre} width={400} height={400} />
  
  <div class="info">
    <h2>{nombre}</h2>
    <p class="price">${precio}</p>
    
    <button id="btn-comprar" class="btn">Comprar Ahora</button>
  </div>
</div>

<style>
  /* EXPLICACIÃ“N: CSS Scoped (Solo afecta a esta tarjeta) */
  .card {
    background: #1a1a1a;
    border-radius: 24px;
    overflow: hidden;
    border: 1px solid #333;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  .card:hover { border-color: #ff00ff; transform: scale(1.02); }
  
  .info { padding: 2rem; text-align: center; }
  
  .btn {
    background: linear-gradient(90deg, #ff00ff, #00ffff);
    border: none;
    padding: 1rem 2rem;
    border-radius: 12px;
    color: white;
    font-weight: bold;
    cursor: pointer;
  }
</style>

