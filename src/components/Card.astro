---
// src/components/Card.astro
const { titulo, descripcion } = Astro.props;
---

<div class="card">
  <h3>{titulo}</h3>
  <p>{descripcion}</p>
</div>

<style>
  .card {
    border: 1px solid #e0e0e0;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
    max-width: 300px;
  }
  h3 { color: #333; margin-top: 0; }
</style>