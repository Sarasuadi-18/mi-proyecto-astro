---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro'; // <--- Importas el archivo nuevo

---


<Layout title="Mis Proyectos">
  <main>
   <h1>Mi Portafolio</h1>
  <Card titulo="Proyecto Web" descripcion="Una web hecha con Astro y mucha paciencia." />
  </main>
</Layout>

<style>
  .grid-proyectos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    padding: 2rem 0;
  }
  .card {
    border: 1px solid #e5e7eb;
    padding: 1.5rem;
    border-radius: 10px;
    background: #f9fafb;
    transition: transform 0.2s;
  }
  .card:hover {
    transform: translateY(-5px);
    border-color: #4f46e5;
  }
  .tag {
    font-size: 0.8rem;
    background: #eef2ff;
    color: #4f46e5;
    padding: 4px 8px;
    border-radius: 4px;
    font-weight: bold;
  }
</style>
