---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto | Mi Web">
  <section class="contacto">
    <h1>Contáctanos</h1>
    <p>Déjanos un mensaje y te responderemos pronto.</p>
    
    <form>
      <div class="field">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" placeholder="Tu nombre..." />
      </div>
      
      <div class="field">
        <label for="mensaje">Mensaje:</label>
        <textarea id="mensaje" name="mensaje" rows="4"></textarea>
      </div>

      <button type="submit">Enviar mensaje</button>
    </form>
  </section>
</Layout>

<style>
  .contacto { max-width: 500px; margin: 0 auto; }
  .field { margin-bottom: 1rem; display: flex; flex-direction: column; }
  input, textarea { padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; }
  button { background: #0070f3; color: white; border: none; padding: 0.7rem; border-radius: 4px; cursor: pointer; }
  button:hover { background: #0056b3; }
</style>